<h3>Welcome {{name}}!</h3>
<h5>Here are your ideas!</h5>
{{#if ideas}}
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each ideas}}
        <tr>
            <td><a href="/ideas/{{id}}">{{title}}</a></td>
            <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
            <td><span clas="dash-status">{{status}}</span></td>
            <td>
                <a href="/ideas/edit/{{id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>
                <form action="/ideas/{{id}}" method="POST" id="delete-form">
                    <input type="hidden" name="method" value="DELETE">
                    <button type="submit" class="btn-danger">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any business ideas</p>
{{/if}}