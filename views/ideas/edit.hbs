<h3 class="red-text"><i class=" far fa-edit"></i> Edit Idea</h3>
<div class="row">
    <form action="/ideas/{{idea.id}}" method="POST" class="col s12">
        <input type="hidden" name="method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{idea.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select class="custom-select" id="status">
                    {{#select idea.status}}
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Share your idea:</h5>
                <textarea id="body" name="body">{{idea.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn teal darken-1">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
